generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  New
  InProgress
  Complete
  Abandoned
}

model Todo {
  id          String     @id @default(cuid())
  name        String
  description String
  status      TodoStatus @default(New)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
